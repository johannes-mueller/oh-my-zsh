export VISUAL=vi
export EDITOR=vi
export LESSOPEN="| /usr/share/source-highlight/src-hilite-lesspipe.sh %s"
export LESS="-R -F -M -X $LESS"

prepend_path() {
    if [[  :$PATH: != *"$1"* ]] then
       PATH=$1:$PATH
    fi
    export PATH
}

if [ -e "$HOME/.zshenv.local" ] ; then
	source "$HOME/.zshenv.local"
fi
